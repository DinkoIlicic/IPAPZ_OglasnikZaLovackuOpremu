{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <p>All products</p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">User name</th>
                <th scope="col">Category</th>
                <th scope="col">Content</th>
                <th scope="col">Price</th>
                <th scope="col">Available quantity</th>
                <th scope="col">Image</th>
                <th scope="col">Update image</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('updatemyproductinfo', {'id': product.id}) }}" class="card-link">{{ product.name }}</a></td>
                <td>{{ product.seller.firstname }} {{ product.seller.lastname }}</td>
                <td>{{ product.category.name }}</td>
                <td>{{ product.content }}</td>
                <td>{{ product.price }} Euro</td>
                <td>{{ product.availablequantity }}</td>
                <td><img width="50" height="50" src="../../../../../uploads/image/{{ product.image }}" alt=""></td>
                <td><a href="{{ path('updatemyproductimage', {'id': product.id}) }}" class="card-link">New Image</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}