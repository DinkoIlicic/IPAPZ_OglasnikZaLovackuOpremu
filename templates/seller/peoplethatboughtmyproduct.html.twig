{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('seller_index') }}">Back</a>
    </div><br />
    <div>
        {{ form_start(form) }}
            {{ form_row(form.user) }}
            <button type="submit" class="btn btn-primary" formnovalidate>Show</button>
        {{ form_end(form) }}
        <br/><br />
        <p><a class="btn btn-primary" href="{{ path('peoplethatboughtmyproduct') }}">Show all</a></p>
    </div><hr />
    <h4>{{ message }}</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Category Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Bought at</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
        {% for item in solditems %}
            {% for eachitem in item %}
                <tr>
                    <td>{{ eachitem.product.name }}</td>
                    <td>{{ eachitem.product.category.name }}</td>
                    <td>{{ eachitem.user.firstname }} {{ eachitem.user.lastname }}</td>
                    <td>{{ eachitem.quantity }}</td>
                    <td>{{ eachitem.boughtAt|date("d.m.Y H:i:s") }}</td>
                    <td>{% if(eachitem.confirmed == 0) %}
                            <a class="btn btn-primary" href="{{ path('confirmbuy', {'id': eachitem.id}) }}">Confirm</a>
                        {% else %}
                            <a class="btn btn-primary" href="{{ path('unconfirmbuy', {'id': eachitem.id}) }}">Confirmed</a>
                        {% endif %}
                    </td>
                    {% if(eachitem.confirmed == 0) %}
                        <td>
                            <a class="btn btn-danger" href="{{ path('deletesolditemperuser', {'id': eachitem.id}) }}">Delete</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}