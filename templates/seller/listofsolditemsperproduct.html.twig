{% extends '/seller/header.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('seller_index') }}">Back</a>
    </div><br />
    <div>
        {{ form_start(form) }}
            {{ form_row(form.product) }}
        <button type="submit" class="btn btn-primary" formnovalidate>Show</button>
        {{ form_end(form) }}
        <br/><br />
        <p><a class="btn btn-primary" href="{{ path('listofsolditemsperproduct') }}">Show all</a></p>
    </div><hr />
    <h4>{{ message }}</h4>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Buyer</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total Price</th>
                <th scope="col">Bought at</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
        {% for item in solditems %}
            {% for eachitem in item %}
                <tr>
                    <td><a href="{{ path('viewsoldproductinfo', {'id': eachitem.id}) }}" class="card-link">{{ eachitem.product.name }}</a></td>
                    <td>{{ eachitem.user.firstname }} {{ eachitem.user.lastname }}</td>
                    <td>{{ eachitem.quantity }}</td>
                    <td>{{ eachitem.price }}</td>
                    <td>{{ eachitem.totalPrice }}</td>
                    <td>{{ eachitem.boughtAt|date("d.m.Y H:i") }}</td>
                    <td>{% if(eachitem.confirmed == 0) %}
                            <a class="btn btn-primary" href="{{ path('confirmbuyperproduct', {'id': eachitem.id}) }}">Confirm</a>
                        {% else %}
                            <a class="btn btn-primary" href="{{ path('confirmbuyperproduct', {'id': eachitem.id}) }}">Confirmed</a>
                        {% endif %}
                    </td>
                    {% if(eachitem.confirmed == 0) %}
                        <td>
                            <a class="btn btn-danger" href="{{ path('deletesolditemperproduct', {'id': eachitem.id}) }}">Delete</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}