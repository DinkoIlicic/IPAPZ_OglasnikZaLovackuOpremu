{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <p>List of users</p>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone number</th>
                <th scope="col">Change password</th>
            </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td><a class="btn btn-primary" href="{{ path('newuserinfoadmin', {'id': user.id}) }}">{{ user.firstName }} {{ user.lastName }}</a></td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phoneNumber }}</td>
                        <td><a class="btn btn-primary" href="{{ path('newpasswordadmin', {'id': user.id}) }}">Change password</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}