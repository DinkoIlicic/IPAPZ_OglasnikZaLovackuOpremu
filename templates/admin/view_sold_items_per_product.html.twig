{% extends '/admin/header.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('admin_index') }}">Back</a>
    </div><br />
    <div>
        {{ form_start(form) }}
            {{ form_row(form.product) }}
            <button type="submit" class="btn btn-primary" formnovalidate>Show</button>
        {{ form_end(form) }}
        <br/><br />
        <p><a class="btn btn-primary" href="{{ path('view_sold_items_per_product') }}">Show all</a></p>
    </div><hr />
    <p>{{ message }}</p>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Seller</th>
            <th scope="col">Buyer</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total price</th>
            <th scope="col">Bought at</th>
            <th scope="col">Status</th>
        </tr>
        </thead>
        <tbody>
            {% for eachItem in soldItems %}
                <tr>
                    <td><a href="{{ path('view_sold_product_info_admin', {'id': eachItem.id}) }}" class="card-link">{{ eachItem.product.name }}</a></td>
                    <td>{{ eachItem.product.user.fullName }}</td>
                    <td>{{ eachItem.user.firstname }} {{ eachItem.user.lastname }}</td>
                    <td>{{ eachItem.quantity }}</td>
                    <td>{{ eachItem.totalPrice }}</td>
                    <td>{{ eachItem.boughtAt|date("d.m.Y H:i") }}</td>
                    <td>
                        {% if(eachItem.confirmed == 0) %}
                            <a class="btn btn-primary" href="{{ path('confirm_buy_per_product_admin', {'id': eachItem.id}) }}">Confirm</a>
                        {% else %}
                            <a class="btn btn-primary" href="{{ path('confirm_buy_per_product_admin', {'id': eachItem.id}) }}">Confirmed</a>
                        {% endif %}
                    </td>
                    {% if(eachItem.confirmed == 0) %}
                        <td>
                            <a class="btn btn-danger" href="{{ path('delete_sold_item_per_product_admin', {'id': eachItem.id}) }}">Delete</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}