{% extends '/admin/header.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('show_coupons') }}">Back</a>
    </div><br />
    <div>
        <p>Create coupon codes</p>
    </div>
    <div>
        {{ form_start(form) }}
            {{ form_row(form.amount) }}
            {{ form_row(form.allProducts) }}
            {{ form_row(form.category) }}
            {{ form_row(form.product) }}
            <button type="submit" class="btn btn-primary" id="disableButton" onclick="submitOnce(this, form)" formnovalidate>Create</button>
        {{ form_end(form) }}
    </div>
{% endblock %}