        <a class="btn btn-primary" href="{{ path('show_coupons') }}">Back</a>
    </div><br />
    <div>
        <p>Create coupon codes</p>
    </div>
    <div>
        {{ form_start(form) }}
            {{ form_row(form.amount) }}
            {{ form_row(form.all) }}
            {{ form_row(form.category) }}
            {{ form_row(form.product) }}
