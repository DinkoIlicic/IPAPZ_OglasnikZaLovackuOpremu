{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('admin_index') }}">Back</a>
    </div><br />
    <p>
        {{ form_start(form) }}
            {{ form_row(form.id) }}
            <button type="submit" class="btn btn-primary" formnovalidate>Show</button>
        {{ form_end(form) }}
    </p><br/><br />
    <p><a class="btn btn-primary" href="{{ path('listofproducts') }}">Show all</a></p>
    <hr />
    <p>{{ message }}</p>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Category Name</th>
            <th scope="col">User Name</th>
            <th scope="col">Visibility</th>
            <th scope="col">Image</th>
        </tr>
        </thead>
        <tbody>
        {% for item in products %}
            {% for eachitem in item %}
                <tr>
                    <td><a class="nav-link" href="{{ path('updateproductinfo', {'id': eachitem.id}) }}">{{ eachitem.name }}</a></td>
                    <td>{{ eachitem.category.name }}</td>
                    <td>{{ eachitem.user.firstname }} {{ eachitem.user.lastname}}</td>
                    <td>{% if(eachitem.visibilityAdmin == 1) %}
                            <a class="nav-link" href="{{ path('makeNotVisibleProduct', {'id': eachitem.id}) }}">Visible</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('makeVisibleProduct', {'id': eachitem.id}) }}">Not Visible</a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('updateproductimage', {'id': eachitem.id}) }}" class="card-link">
                            <img width="50" height="50" src="../../../../../uploads/image/{{ eachitem.image }}" alt="">
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}