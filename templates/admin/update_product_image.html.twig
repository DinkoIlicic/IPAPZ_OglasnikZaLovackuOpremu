{% extends '/admin/header.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary" href="{{ path('list_of_products') }}">Back</a>
    </div><br />
    <div>
        <p>Update the product image</p>
    </div>
    <div>
        {{ form_start(form) }}
            {{ form_row(form.image) }}
            <button type="submit" class="btn btn-primary" id="disableButton" onclick="submitOnce(this, form)" formnovalidate>Update</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#product_image_form_image').on('change',function(){
            //get the file name
            var fileName = $(this).val();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>
{% endblock %}