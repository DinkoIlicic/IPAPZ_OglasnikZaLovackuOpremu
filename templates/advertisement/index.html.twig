{% extends 'base.html.twig' %}
{% block categories %}
    <div class="dropdown show">
        <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            {% for category in categories %}
                <a class="dropdown-item" href="{{ path('show_categories', {'id': category.id}) }}">{{ category.name }} </a>
            {% endfor %}
        </div>
    </div>
    {% if is_granted('ROLE_USER') %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('my_items') }}">My Items</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('my_wishlist') }}">Wishlist</a>
        </li>
    {% endif %}
{% endblock %}

{% block body %}
    {% if(products) %}
        <div class="container"><br />
            <div class="navigation">
                <p>{{ knp_pagination_render(products) }}</p>
            </div>
            <div class="row" style="margin-top: 50px">
                {% for product in products %}
                    <div class="col-sm" align="center" style="margin-bottom: 50px; margin-right: 10px;">
                        <a href="{{ path('check_product', {'pageName': product.customUrl}) }}">
                            <img width="300" height="300" src="../../../../../uploads/image/{{ product.image }}" alt="">
                            <p style="color: black"><strong>{{ product.name }}</strong></p>
                            <p style="color: black"><strong>â‚¬{{ product.price }}</strong></p>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}